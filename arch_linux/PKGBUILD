# Maintainer: Alex <alexzkhr public at gmail dot com>

pkgname=ed_highway
pkgver=r18.22ac6f4
pkgrel=1
pkgdesc='Desktop client of Neutron star routes plotter for Elite Dangerous. Based on https://www.spansh.co.uk/plotter'
arch=('i686' 'x86_64')
url='https://github.com/alexzk1/ed_highway'
license=('MIT')
depends=(
qt5-base
curl
)

makedepends=(
git
)
source=(
'git://github.com/alexzk1/ed_highway.git'
)
sha256sums=('SKIP')
_gitname='ed_highway'
prepare() {    
   cd $_gitname
}

pkgver() {
  cd $_gitname
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
build() {
  cd $_gitname
  qmake
  make
}
package() {
  cd $_gitname
  #make INSTALL_ROOT="$pkgdir" install  
  install -Dm755 "$srcdir"/ed_highway/ed_highway "$pkgdir"/usr/bin/ed_highway
  
  install -d $pkgdir/usr/share/applications
  install -m644 $srcdir/ed_highway/arch_linux/ed_highway.desktop $pkgdir/usr/share/applications  
  install -m644 $srcdir/ed_highway/arch_linux/ed_highway.png "$pkgdir"/usr/share/icons/hicolor/128x128/apps/ed_highway.png
}
